{
    "compilerOptions": {
        "noImplicitAny": false,
        "diagnostics": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2017"
        ],
        "experimentalDecorators": true,
        "target": "es5",
        "allowSyntheticDefaultImports": true
    },
    "target": "ES5",
    "module": "ES6",
    "include": [
        "src/index.ts",
        "typings/**.d.ts",
        "types/**.d.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**.test.ts"
    ]
}